<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/previewTextView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_medium"
            android:background="@drawable/item_background"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="!"
            android:textColor="@color/ghostWhite"
            android:textSize="20sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleConditionTextView"
                style="@style/SubtitleTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1 Condition" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/conditionsTextView"
                style="@style/SecondaryTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Jaw Alligator Crosses Above Teeth Aliâ€¦" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_medium"
            android:src="@drawable/ic_right" />
    </LinearLayout>

</LinearLayout>